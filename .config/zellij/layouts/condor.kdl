layout {
    cwd "$ZJ_PROJECT_DIR"

    default_tab_template {
        pane size=1 borderless=true {
            plugin location="custom-tab-bar"
        }
        children
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
        pane size=1 borderless=true {
            plugin location="zjstatus" {
                format_left  "{command_git_branch}"
                format_right "{datetime}"
                format_space ""

                command_git_branch_command     "git-status-line --async-pr"
                command_git_branch_format      "{stdout}"
                command_git_branch_interval    "5"
                command_git_branch_rendermode  "raw"

                datetime          "#[fg=white]{format}"
                datetime_format   "%H:%M"
                datetime_timezone "America/New_York"
            }
        }
    }

    tab name="dev" focus=true {
        pane split_direction="vertical" {
            pane size="75%" command="bash" {
                args "-c" "[[ -d .venv ]] && source .venv/bin/activate; HIDE_GIT_PROMPT=1 exec claude"
            }
            pane split_direction="horizontal" {
                pane size="80%" command="bash" {
                    args "-c" "[[ -d .venv ]] && source .venv/bin/activate; HIDE_GIT_PROMPT=1 exec zsh"
                }
                pane size="20%" close_on_exit=true command="run-vscode-tasks"
            }
        }
    }

    tab name="helix" {
        pane command="hx" {
            args "."
        }
    }

    tab name="lazygit" {
        pane command="lazygit"
    }
}
